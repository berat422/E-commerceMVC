
@model Category
@{
    ViewData["Title"] = "Add";
}

<form method="post" asp-action="Delete">
    <input asp-for="CategoryId" hidden/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Category </h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        Name
                       
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled type="text" class="form-control" placeholder="Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Display Order
                       
                    </div>
                    <div class="col-8">
                        <input asp-for="DesplayOrder" disabled type="number" class="form-control" placeholder="Display Order" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" value="Delete" class="btn btn-danger btn-info w-100" />
                        </div>
                        <div class="col"><a asp-controller="Category" asp-action="Index" class="btn btn-success w-100">Back</a></div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>



