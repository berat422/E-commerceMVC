@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Add" class="btn btn-primary text-right">
                Create New Category
            </a>
        </div>
    </div>
</div>
<br/><br/>
@if(Model.Count()>0)
 {
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th>

                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
                {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="50%">@item.DesplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary mx-2">
                                Edit
                            </a>
                        </div>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
        </tbody>
    </table>
 }
            else
            {
                <p>No category is added</p>
            }

